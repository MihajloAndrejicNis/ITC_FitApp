<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/header_bg"
    >

    <!--  horizontal da bude  -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_monday"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="M"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_tuesday"

        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginTop="10dp"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="T"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"

        />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_wednesday"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="W"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"

        />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_thursday"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="T"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"

        />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_friday"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="F"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"

        />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_saturday"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"

        />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/header_btn_sunday"

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:backgroundTint="@color/fill_color"

        />
</LinearLayout>