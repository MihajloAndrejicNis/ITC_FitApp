<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <!--      Par 1      -->
        <LinearLayout
            android:id="@+id/pair1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/workout_icon_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_sat"

            />
        <TextView
            android:id="@+id/workout_icon_first_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:text="30min"
            android:textStyle="bold"
            />
        </LinearLayout>


        <!--      Par 2      -->
        <LinearLayout
            android:id="@+id/pair2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:id="@+id/workout_icon_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_teg"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/workout_icon_second_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:text="30min"
            android:textStyle="bold"

            />
        </LinearLayout>

        <!--      Par 3      -->
        <LinearLayout
            android:id="@+id/pair3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/workout_icon_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_vaga"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/workout_icon_third_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:text="30min"
            android:textStyle="bold"

            />
        </LinearLayout>

        <!--      Par 4      -->

        <LinearLayout
            android:id="@+id/pair4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >


        <ImageView
            android:id="@+id/workout_icon_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_prostirka"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/workout_icon_fourth_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:text="30min"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>