<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mindset"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/body_mindset_title"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    android:text="Featured Mindset"
                    android:textStyle="bold"
                    android:textSize="26dp"


                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mindset_constr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/body_mindset_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"

                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mindset_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:cardCornerRadius="15dp">


                                <ImageView
                                    android:id="@+id/body_mindset_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    />

                        </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/body_mindset_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditation for Medium"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="@+id/mindset_constr"
                    app:layout_constraintStart_toStartOf="@+id/mindset_constr"
                    android:layout_marginStart="5dp"

                    />


</androidx.constraintlayout.widget.ConstraintLayout>